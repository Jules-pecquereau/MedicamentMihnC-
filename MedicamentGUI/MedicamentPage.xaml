<Page x:Class="MedicamentGUI.MedicamentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MedicamentGUI"
      mc:Ignorable="d" 
      d:DesignHeight="550" d:DesignWidth="1000"
      Title="MÃ©dicaments">

    <Grid Background="#ECF0F1">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Titre -->
        <TextBlock Grid.Row="0" Text="Gestion des MÃ©dicaments" 
                   FontSize="28" FontWeight="Bold" 
                   Foreground="#2C3E50" 
                   Margin="20,20,20,10"
                   HorizontalAlignment="Center"/>

        <!-- Barre de recherche -->
        <Border Grid.Row="1" Background="White" 
                CornerRadius="5" Margin="20,10" 
                Padding="15" BorderBrush="#BDC3C7" BorderThickness="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBox x:Name="TxtSearchMedicament" 
                         Grid.Column="0"
                         FontSize="16" 
                         VerticalContentAlignment="Center"
                         Padding="10,8"
                         BorderThickness="0"
                         TextChanged="TxtSearchMedicament_TextChanged"/>

                <Button Grid.Column="1" Content="ðŸ” Rechercher" 
                        Width="120" Height="40"
                        Background="#3498DB" Foreground="White"
                        FontSize="14" FontWeight="Bold"
                        BorderThickness="0" Cursor="Hand"
                        Margin="10,0,0,0"
                        Click="BtnSearch_Click"/>
            </Grid>
        </Border>

        <!-- Liste des mÃ©dicaments -->
        <Border Grid.Row="2" Background="White" 
                CornerRadius="5" Margin="20,10,20,20" 
                Padding="10" BorderBrush="#BDC3C7" BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Orientation="Horizontal" 
                            HorizontalAlignment="Right" Margin="0,0,0,10">
                    <Button Content="âž• Ajouter" 
                            Width="120" Height="35"
                            Background="#27AE60" Foreground="White"
                            FontSize="14" FontWeight="Bold"
                            BorderThickness="0" Cursor="Hand"
                            Margin="5"
                            Click="BtnAddMedicament_Click"/>
                    <Button Content="âœï¸ Modifier" 
                            Width="120" Height="35"
                            Background="#F39C12" Foreground="White"
                            FontSize="14" FontWeight="Bold"
                            BorderThickness="0" Cursor="Hand"
                            Margin="5"
                            Click="BtnEditMedicament_Click"/>
                    <Button Content="ðŸ—‘ï¸ Supprimer" 
                            Width="120" Height="35"
                            Background="#E74C3C" Foreground="White"
                            FontSize="14" FontWeight="Bold"
                            BorderThickness="0" Cursor="Hand"
                            Margin="5"
                            Click="BtnDeleteMedicament_Click"/>
                </StackPanel>

                <DataGrid Grid.Row="1" 
                          x:Name="MedicamentDataGrid"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          IsReadOnly="True"
                          SelectionMode="Single"
                          HeadersVisibility="Column"
                          GridLinesVisibility="Horizontal"
                          AlternatingRowBackground="#F8F9FA"
                          RowBackground="White">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="80"/>
                        <DataGridTextColumn Header="Nom" Binding="{Binding Nom}" Width="*"/>
                        <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="2*"/>
                        <DataGridTextColumn Header="Prix" Binding="{Binding Prix}" Width="100"/>
                        <DataGridTextColumn Header="Stock" Binding="{Binding Stock}" Width="100"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>
    </Grid>
</Page>
